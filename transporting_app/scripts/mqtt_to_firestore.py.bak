import paho.mqtt.client as mqtt
import firebase_admin
from firebase_admin import credentials
from firebase_admin import firestore
import json
import time

# --- Cáº¤U HÃŒNH ---
MQTT_BROKER = "localhost"
MQTT_PORT = 1883
MQTT_TOPIC = "ammo_transport/+/telemetry" # Láº¯ng nghe Táº¤T Cáº¢ thiáº¿t bá»‹

# ÄÆ°á»ng dáº«n tá»›i key báº¡n Ä‘Ã£ táº£i vá» (Ä‘á»ƒ chung thÆ° má»¥c)
CRED_PATH = 'scripts/serviceAccountKey.json' 

# --- KHá»I Táº O FIREBASE ---
try:
    cred = credentials.Certificate(CRED_PATH)
    firebase_admin.initialize_app(cred)
    db = firestore.client()
    print("âœ… ÄÃ£ káº¿t ná»‘i tá»›i Firestore thÃ nh cÃ´ng!")
except Exception as e:
    print(f"âŒ Lá»–I: KhÃ´ng thá»ƒ káº¿t ná»‘i Firestore. HÃ£y cháº¯c cháº¯n file '{CRED_PATH}' tá»“n táº¡i.")
    print(f"Lá»—i chi tiáº¿t: {e}")
    exit()

# --- MQTT FUNCTIONS ---
def on_connect(client, userdata, flags, rc):
    if rc == 0:
        print(f"âœ… ÄÃ£ káº¿t ná»‘i tá»›i MQTT Broker táº¡i {MQTT_BROKER}")
        client.subscribe(MQTT_TOPIC)
        print(f"    -> Äang láº¯ng nghe topic: {MQTT_TOPIC}")
    else:
        print(f"âŒ Káº¿t ná»‘i MQTT tháº¥t báº¡i, mÃ£ lá»—i: {rc}")

def on_message(client, userdata, msg):
    try:
        payload_str = msg.payload.decode('utf-8')
        data = json.loads(payload_str)
        
        # Láº¥y device_id tá»« JSON
        device_id = data.get('device_id')
        if not device_id:
            print("âš ï¸ Nháº­n Ä‘Æ°á»£c tin nháº¯n nhÆ°ng thiáº¿u 'device_id'. Bá» qua.")
            return

        # --- CHUáº¨N Bá»Š GHI VÃ€O FIRESTORE ---
        
        # 1. Chuyá»ƒn GPS (lat/lng) thÃ nh GeoPoint cá»§a Firestore
        if 'gps' in data and 'lat' in data['gps'] and 'lng' in data['gps']:
            data['location'] = firestore.GeoPoint(data['gps']['lat'], data['gps']['lng'])
            del data['gps'] # XÃ³a 'gps' cÅ© Ä‘i cho gá»n
        
        # 2. ThÃªm timestamp cá»§a server (Ä‘á»ƒ biáº¿t khi nÃ o nháº­n Ä‘Æ°á»£c)
        data['last_updated'] = firestore.SERVER_TIMESTAMP
        
        # 3. Ghi vÃ o Firestore
        # ChÃºng ta dÃ¹ng 'set' thay vÃ¬ 'add' Ä‘á»ƒ nÃ³ tá»± Ä‘á»™ng *cáº­p nháº­t*
        # tÃ i liá»‡u cá»§a thiáº¿t bá»‹ Ä‘Ã³, thay vÃ¬ táº¡o má»›i má»—i láº§n.
        doc_ref = db.collection('devices').document(device_id)
        doc_ref.set(data, merge=True) # merge=True Ä‘á»ƒ chá»‰ cáº­p nháº­t, khÃ´ng ghi Ä‘Ã¨
        
        print(f"ğŸ“¡ ÄÃ£ nháº­n vÃ  ghi dá»¯ liá»‡u cho: {device_id}")

    except json.JSONDecodeError:
        print(f"âš ï¸ Lá»—i: KhÃ´ng thá»ƒ decode JSON: {msg.payload.decode('utf-8')}")
    except Exception as e:
        print(f"âŒ Lá»—i khi xá»­ lÃ½ tin nháº¯n: {e}")

# --- KHá»I CHáº Y ---
client = mqtt.Client()
client.on_connect = on_connect
client.on_message = on_message

try:
    client.connect(MQTT_BROKER, MQTT_PORT, 60)
    print("â³ Script cáº§u ná»‘i (MQTT -> Firestore) Ä‘ang cháº¡y...")
    print("   Nháº¥n Ctrl+C Ä‘á»ƒ dá»«ng.")
    client.loop_forever()
except KeyboardInterrupt:
    print("\nğŸ›‘ ÄÃ£ dá»«ng script.")
except Exception as e:
    print(f"âŒ Lá»—i káº¿t ná»‘i MQTT: {e}")